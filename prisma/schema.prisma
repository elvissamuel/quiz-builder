// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quiz {
  id          String   @id @default(cuid())
  title       String
  description String?
  creatorName String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  questions   Question[]
  results     Result[]
  responses   QuizResponse[]
  
  @@map("quizzes")
}

model Question {
  id       String @id @default(cuid())
  text     String
  order    Int
  quizId   String
  
  quiz     Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
  answers  Answer[]
  
  @@map("questions")
}

model Answer {
  id         String @id @default(cuid())
  text       String
  order      Int
  questionId String
  resultId   String
  
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  result     Result @relation(fields: [resultId], references: [id], onDelete: Cascade)
  
  @@map("answers")
}

model Result {
  id          String  @id @default(cuid())
  title       String
  description String
  imageUrl    String?
  quizId      String
  
  quiz        Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
  answers     Answer[]
  
  @@map("results")
}

model QuizResponse {
  id        String   @id @default(cuid())
  quizId    String
  resultId  String
  createdAt DateTime @default(now())
  
  quiz      Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
  
  @@map("quiz_responses")
}
